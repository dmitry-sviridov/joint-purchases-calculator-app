<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/cardview_elevation"
    app:cardCornerRadius="@dimen/cardview_corner_radius"
    android:layout_marginEnd="@dimen/cardview_margin"
    android:layout_marginTop="@dimen/cardview_margin"
    android:layout_marginStart="@dimen/cardview_margin">

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="8dp">

        <TextView
            android:id="@+id/tw_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мясо"
            android:textSize="20sp"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            />

        <TextView
            android:id="@+id/text_cost_item"
            android:text="@string/items_recycler_list_item_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tw_item_title"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tw_item_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/tw_item_title"
            android:layout_toEndOf="@+id/text_cost_item"
            android:text="2500"/>


        <ImageView
            android:id="@+id/btn_delete_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

        </ImageView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>