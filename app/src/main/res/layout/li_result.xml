<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/person_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:text="Ваня Иванов"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textSize="15sp"
        android:maxWidth="150dp"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/person_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:ellipsize="end"
        android:text="Валерия Петровна"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textSize="15sp"
        android:maxWidth="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_gives"
        app:layout_constraintBottom_toTopOf="@+id/tw_result_money"
        app:layout_constraintEnd_toEndOf="@+id/tw_result_money"
        app:layout_constraintStart_toStartOf="@+id/tw_result_money"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tw_result_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="23435"
        app:layout_constraintEnd_toStartOf="@+id/person_2"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toEndOf="@+id/person_1"
        app:layout_constraintTop_toBottomOf="@+id/person_1" />

</androidx.constraintlayout.widget.ConstraintLayout>
